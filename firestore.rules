rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // üß† Global rule ‚Äî user must be authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // üé© Check roles
    function isAdmin() {
      return isSignedIn() && request.auth.token.role == "admin";
    }

    function isCaregiver() {
      return isSignedIn() && request.auth.token.role == "caregiver";
    }

    function isParent() {
      return isSignedIn() && request.auth.token.role == "parent";
    }

    // ================================
    // üìÅ USERS COLLECTION
    // ================================
    match /users/{userId} {
      // Only Admins can read/write all users
      allow read, write: if isAdmin();

      // Caregiver or Parent can only access their own profile
      allow read, update: if isSignedIn() && request.auth.uid == userId;

      // Prevent delete for non-admins
      allow delete: if false;
    }

    // ================================
    // üë®‚Äçü¶Ω CLIENTS COLLECTION
    // ================================
    match /clients/{clientId} {
      // Admin can do anything
      allow read, write, delete: if isAdmin();

      // Caregiver can read only if assigned to that client
      allow read: if isCaregiver() &&
                   resource.data.assignedCaregiverId == request.auth.uid;

      // Parent can read only if this is their child
      allow read: if isParent() &&
                   resource.data.parentId == request.auth.uid;

      // Prevent caregivers or parents from writing
      allow write, delete: if false;
    }

    // ================================
    // üïí SHIFTS COLLECTION
    // ================================
    match /shifts/{shiftId} {
      // Admin full control
      allow read, write, delete: if isAdmin();

      // Caregiver can read their own assigned shifts
      allow read: if isCaregiver() &&
                   resource.data.caregiverId == request.auth.uid;

      // Caregiver can update shift status (accept/start/end)
      allow update: if isCaregiver() &&
                    request.resource.data.caregiverId == request.auth.uid;

      // Parent can view shifts for their assigned child
      allow read: if isParent() &&
                   resource.data.clientParentId == request.auth.uid;

      // No other write/delete permissions for caregiver/parent
      allow write, delete: if false;
    }

    // ================================
    // üìù SHIFT NOTES
    // ================================
    match /shiftNotes/{noteId} {
      // Admin full access
      allow read, write, delete: if isAdmin();

      // Caregiver can create and read their own notes
      allow create, read: if isCaregiver() &&
                          request.resource.data.caregiverId == request.auth.uid;

      // Parent can read notes linked to their child‚Äôs shifts
      allow read: if isParent() &&
                   resource.data.clientParentId == request.auth.uid;

      // Prevent edits/deletes by caregivers or parents
      allow update, delete: if false;
    }

    // ================================
    // ‚ö†Ô∏è INCIDENT REPORTS
    // ================================
    match /incidents/{incidentId} {
      // Admin full access
      allow read, write, delete: if isAdmin();

      // Caregiver can create and view their own incident reports
      allow create, read: if isCaregiver() &&
                          request.resource.data.reporterId == request.auth.uid;

      // Parent can view incidents for their child only
      allow read: if isParent() &&
                   resource.data.clientParentId == request.auth.uid;

      // No update or delete access for caregivers/parents
      allow update, delete: if false;
    }

    // ================================
    // üí¨ MESSAGES (CHAT)
    // ================================
    match /messages/{chatId}/messages/{messageId} {
      allow read, write: if isSignedIn() &&
                         request.auth.uid in resource.data.participants;
    }

    // ================================
    // üßæ DEFAULT RULE (deny all)
    // ================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
